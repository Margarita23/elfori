<%= form_with(model: [:admin, @tile_collection, @plate], local: true, html: { multipart: true, class: 'item-form' }) do |form| %>
  <div class="form-group">
    <%= form.label :title, "Назва відтінку" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :order, "Порядок" %>
    <%= form.number_field :order, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :image, "Зображення" %>
    <%= form.file_field :image, class: "form-control" %>
    <% if @plate.image.attached? %>
      <div class="mt-2">
        <p>Поточне зображення:</p>
        <%= image_tag @plate.image.variant(resize: "100x100"), class: "plate__image" %>
      </div>
    <% end %>
  </div>

  <div class="form-actions">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to 'Скасувати', admin_tile_collection_plates_path(@tile_collection), class: "btn btn-secondary" %>
  </div>
<% end %>
